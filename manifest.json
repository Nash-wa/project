{
  "manifest_version": 2,
  "name": "Your Extension Name",
  "version": "1.0",
  "description": "Description of your extension",
  "browser_action": {
    
    "default_icon": {
      
    }
  },
  "permissions": [
    "activeTab"
  ],
  
  "background": {
    "scripts": ["extension.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension.js"]
    }
  ]
}
